{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": {
          "level": "info",
          "options": {
            "hooks": [
              {
                "name": "useMutation",
                "stableResult": ["mutate", "mutateAsync", "reset"]
              }
            ]
          }
        }
      }
    }
  }
}
